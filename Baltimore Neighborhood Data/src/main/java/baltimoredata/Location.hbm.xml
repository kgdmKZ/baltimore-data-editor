<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping auto-import="true" default-access="property" default-cascade="none" default-lazy="true">
    <class catalog="baltimore_neighborhoods" dynamic-insert="false" dynamic-update="false" mutable="true" name="Location" optimistic-lock="version" polymorphism="implicit" select-before-update="false" table="location">
        <id name="id" type="java.lang.Integer">
            <column name="id"/>
            <generator class="identity"/>
        </id>
        <many-to-one class="Address" embed-xml="true" fetch="select" insert="true" name="address" not-found="exception" optimistic-lock="true" unique="false" update="true">
            <column name="address_id" not-null="true" unique="true"/>
        </many-to-one>
        <property generated="never" lazy="false" name="coords" optimistic-lock="true" type="serializable" unique="false">
            <column name="coords" not-null="true" unique="true"/>
        </property>
        <property generated="never" lazy="false" name="blockNumber" optimistic-lock="true" type="string" unique="false">
            <column name="block_number" not-null="true"/>
        </property>
        <property generated="never" lazy="false" name="lotNumber" optimistic-lock="true" type="string" unique="false">
            <column name="lot_number" not-null="true"/>
        </property>
        <set embed-xml="true" fetch="select" inverse="true" lazy="true" mutable="true" name="vacantBuildings" optimistic-lock="true" sort="unsorted" table="vacant_building">
            <key on-delete="noaction">
                <column name="location_id" not-null="true"/>
            </key>
            <one-to-many class="VacantBuilding" embed-xml="true" not-found="exception"/>
        </set>
    </class>
</hibernate-mapping>
