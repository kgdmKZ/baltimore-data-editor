            <column name="area_id" not-null="true"/>
        </many-to-one>
        <property generated="never" lazy="false" name="name" optimistic-lock="true" type="string" unique="false">
            <column name="name" not-null="true" unique="true"/>
        </property>
        <set embed-xml="true" fetch="select" inverse="true" lazy="true" mutable="true" name="addresses" optimistic-lock="true" sort="unsorted" table="address">
            <key on-delete="noaction">
                <column name="neighborhood_id" not-null="true"/>
            </key>
            <one-to-many class="Address" embed-xml="true" not-found="exception"/>
        </set>
    </class>
</hibernate-mapping>
